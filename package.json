{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vue2-ts-starter",
  "private": true,
  "version": "0.2.10",
  "description": "Vue2 TypeScript Startar project for Vite.",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vite-vue2-ts-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vite-vue2-ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vite-vue2-ts-starter/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./node_modules/.vite",
    "build": "vite build",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "lint:markup": "vue-tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.3",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-vue": "^8.4.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.5.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.5.5",
    "vite": "^2.8.2",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-stylelint": "^1.1.3",
    "vite-plugin-vue2": "^1.9.3",
    "vue-eslint-parser": "^8.2.0",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.31.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,htm,html}": [
      "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
      "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint"
    ],
    "*.{js,ts,json,yml,yaml,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  }
}
